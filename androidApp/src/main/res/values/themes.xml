<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Platform.Theme.DeckBox" parent="android:Theme.Material.Light" />

  <style name="Base.Theme.DeckBox" parent="Platform.Theme.DeckBox">
    <item name="android:windowActionModeOverlay">true</item>
  </style>

  <style name="Theme.DeckBox" parent="Base.Theme.DeckBox">
  </style>

  <style name="Theme.DeckBox.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Theme.DeckBox.Immerse" parent="Theme.DeckBox.NoActionBar">
    <item name="android:statusBarColor">@android:color/transparent</item>

    <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_nav_bar</item>
  </style>

  <style name="Theme.DeckBox.Home" parent="Theme.DeckBox.Immerse">
    <item name="android:windowLightStatusBar">@bool/use_light_status_bar</item>
  </style>
</resources>
